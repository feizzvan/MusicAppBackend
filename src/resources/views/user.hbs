{{> header}}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="fw-bold">Users Management</h3>
  <a href="/users/add" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add</a>
</div>

<div class="mb-3">
  <input type="text" class="form-control" placeholder="Search users..." />
</div>

<div class="table-responsive">
  <table class="table table-bordered align-middle text-center">
    <thead class="table-light">
      <tr>
        <th>Image</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Account</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>
          <img src="{{this.image}}" alt="avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
        </td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.account}} <i class="fas fa-check-circle text-success ms-1"></i></td>
        <td>{{this.roles}}</td>
        <td>
          <a href="/users/view/{{this.id}}" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
          <a href="/users/edit/{{this.id}}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
          <form action="/users/delete/{{this.id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Pagination -->
<nav>
  <ul class="pagination justify-content-center">
    <li class="page-item active"><a class="page-link" href="#">1</a></li>
    <!-- Add more page items if needed -->
  </ul>
</nav>

{{> footer}}
